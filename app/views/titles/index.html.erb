<h2><%= t('navbar.titles') %></h2>

<%= form_for @title, html:{ class: "form-inline" } do |f| %>
  <div class="form-group">
    <%= f.label :name, t('forms.name') %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :url, t('forms.url') %>
    <%= f.text_field :url, class: "form-control" %>
  </div>

  <%= f.submit class: "btn btn-primary" %>
<% end %>

<table class="table table-stripped">
  <thead>
    <tr>
      <th><%= t('lists.actions') %></th>
      <th><%= t('forms.name') %></th>
      <th><%= t('forms.url') %></th>
    </tr>
  </thead>

  <tbody>
    <%= render @titles %>
  </tbody>
</table>

<%= will_paginate @titles %>
